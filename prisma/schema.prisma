generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id String @id @default(uuid())
  name String @unique
  alias String?
  isCompany Boolean
  phones Phone[]
  vehicles Vehicle[]
  reminders Reminder[]
  enabled Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Phone {
  id String @id @default(uuid())
  countryCode String
  number String
  customer Customer @relation(fields: [customerId], references: [id])
  customerId String
}

model Vehicle {
  id String @id @default(uuid())
  brand String
  model String
  plate String @unique
  customer Customer @relation(fields: [customerId], references: [id])
  customerId String
  appointments Appointment[]
}

model Appointment {
  id String @id @default(uuid())
  type String
  date DateTime
  vehicle Vehicle @relation(fields: [vehicleId], references: [id])
  vehicleId String
}

model Reminder {
  id String @id @default(uuid())
  message String
  customer Customer @relation(fields: [customerId], references: [id])
  customerId String
}

model News {
  id String @id @default(uuid())
  fileName String?
  date DateTime
  total Int
  success Int
  failure Int
  failures FailureNews[]
}

model FailureNews {
  id String @id @default(uuid())
  receivedEntity  String
  reason String
  fixed Boolean
  news News @relation(fields: [newsId], references: [id])
  newsId String
}
